<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.oselm.matchgen.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativepeople">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="32dp"
            android:text="NÃºmero de personas"
            android:id="@+id/textView2" />

        <Spinner
            android:id="@+id/numeros"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/textView2"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="32dp"></Spinner>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/scroll"
            android:layout_below="@+id/numeros"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="26dp">

            <LinearLayout
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            </LinearLayout>


        </ScrollView>
        <Button
            android:id="@+id/addbutton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/scroll"
            android:layout_marginLeft="75dp"
            android:text="ADD" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
